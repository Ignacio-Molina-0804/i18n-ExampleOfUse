---
// Importa el layout principal
import Layout from "../../layouts/Layout.astro";
// Importa las utilidades de i18n
import { useTranslations } from "../../i18n/util";
import { languageList } from "../../i18n/ui";

// Obtiene el idioma actual
const currentLang = Astro.currentLocale || "es";

// Crea el traductor para este idioma
const translateLabels = useTranslations(currentLang as keyof typeof languageList);
---
<!-- Usa el layout y define el contenido -->
<Layout>
    <section>
        <!-- Muestra el título traducido -->
        <h1>{translateLabels('home.title')}</h1>
    </section>
</Layout>

<!-- Estilos específicos de la página -->
<style>
    section {
        padding: 2rem;
        background-color: #f0f0f0;
        border-radius: 8px;
    }

    h1 {
        color: #333;
        font-size: 2rem;
    }
</style>